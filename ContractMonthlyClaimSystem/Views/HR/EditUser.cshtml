@model ContractMonthlyClaimSystem.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit User";
    bool isLecturer = ViewBag.IsLecturer == true;
}

<div class="container col-md-6">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Edit User Details</h4>
        </div>
        <div class="card-body">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }

            <form asp-action="EditUser" method="post">
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label">First Name</label>
                    <input name="firstName" value="@Model.FirstName" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Last Name</label>
                    <input name="lastName" value="@Model.LastName" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input name="email" value="@Model.Email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Hourly Rate (ZAR)</label>
                    <input name="hourlyRate"
                           value="@Model.HourlyRate.ToString("F2").Replace(",", ".")"
                           type="number" step="0.01" class="form-control" required
                           @(isLecturer ? "" : "readonly")
                           style="@(isLecturer ? "" : "background-color: #e9ecef; cursor: not-allowed;")" />

                    @if (!isLecturer)
                    {
                        <small class="text-danger">
                            <i class="fa-solid fa-lock"></i> Rate editing is disabled for Admins/Coordinators.
                        </small>
                    }
                    else
                    {
                        <small class="text-muted">Set the approved hourly rate for this lecturer.</small>
                    }
                </div>

                <button type="submit" class="btn btn-success w-100">Save Changes</button>
                <a asp-action="ManageUsers" class="btn btn-link d-block text-center mt-2">Cancel</a>
            </form>
        </div>
    </div>
</div>