@model IEnumerable<ContractMonthlyClaimSystem.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Lecturers";
}

<div class="container">
    <h2 class="mb-4">Manage Lecturers</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Hourly Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.HourlyRate.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
                    <td>
                        <a asp-action="EditLecturer" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                            <i class="fa-solid fa-pen-to-square"></i> Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>