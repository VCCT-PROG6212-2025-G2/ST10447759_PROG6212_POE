@{
    ViewData["Title"] = "Add New Lecturer";
}

<div class="container">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewBag.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Lecturer Details</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddLecturer" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">First Name</label>
                        <input name="firstName" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Last Name</label>
                        <input name="lastName" class="form-control" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Email (Username)</label>
                        <input name="email" type="email" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Phone Number</label>
                        <input name="phoneNumber" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Hourly Rate (ZAR)</label>
                        <input name="hourlyRate" type="number" step="0.01" class="form-control" required placeholder="e.g. 850.00" />
                        <small class="text-muted">This rate will be auto-filled for the lecturer's claims.</small>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Initial Password</label>
                        <input name="password" type="password" class="form-control" required />
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg">Create Lecturer Account</button>
                    <a asp-controller="HR" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>