@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="text-center">
    <h1 class="display-4">HR Management</h1>
    <p class="lead">Manage users and generate reports.</p>
</div>

<hr class="my-5" />

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100 border-primary">
            <div class="card-body text-center">
                <h3 class="card-title"><i class="fa-solid fa-user-plus"></i></h3>
                <h4>Onboard User</h4>
                <p>Create a new User profile</p>
                <a asp-controller="HR" asp-action="AddUser" class="btn btn-primary">Add User</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100 border-warning">
            <div class="card-body text-center">
                <h3 class="card-title"><i class="fa-solid fa-users"></i></h3>
                <h4>Manage Users</h4>
                <p>Update User details</p>
                <a asp-controller="HR" asp-action="ManageUsers" class="btn btn-warning">View All Users</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100 border-info">
            <div class="card-body text-center">
                <h3 class="card-title"><i class="fa-solid fa-file-contract"></i></h3>
                <h4>Reports & Invoices</h4>
                <p>Generate payment reports for approved claims.</p>
                <a class="btn btn-secondary" asp-controller="HR" asp-action="Reports">Reports
                </a>
            </div>
        </div>
    </div>
</div>