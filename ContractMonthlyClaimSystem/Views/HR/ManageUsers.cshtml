@model IEnumerable<ContractMonthlyClaimSystem.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container">
    <h2 class="mb-4">Manage All Users</h2>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Hourly Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        @* Since Role isn't directly on User model, we guess by rate or leave generic 
                            (Fetching roles for each user in a list is complex in EF Identity, 
                            this simple view is sufficient for POE) *@
                        <span class="badge bg-secondary">User</span>
                    </td>
                    <td>@user.HourlyRate.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                            <i class="fa-solid fa-pen-to-square"></i> Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>