@model IEnumerable<ContractMonthlyClaimSystem.Models.UserWithRoleViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container">
    <h2 class="mb-4">Manage All Users</h2>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Hourly Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.User.FirstName @item.User.LastName</td>
                    <td>@item.User.Email</td>
                    <td>
                        @{
                            var badgeClass = item.Role switch
                            {
                                "HR" => "bg-danger",
                                "Manager" => "bg-success",
                                "Coordinator" => "bg-warning text-dark",
                                "Lecturer" => "bg-primary",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@item.Role</span>
                    </td>
                    <td>@item.User.HourlyRate.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@item.User.Id" class="btn btn-sm btn-warning">
                            <i class="fa-solid fa-pen-to-square"></i> Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>