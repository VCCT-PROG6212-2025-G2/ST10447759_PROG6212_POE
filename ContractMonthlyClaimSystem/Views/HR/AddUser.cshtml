@{
    ViewData["Title"] = "Add New User";
}

<div class="container">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @ViewBag.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">User Details</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddUser" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Role</label>
                        <select name="role" class="form-select" id="roleSelector">
                            <option value="Lecturer">Lecturer</option>
                            <option value="Coordinator">Programme Coordinator</option>
                            <option value="Manager">Academic Manager</option>
                            <option value="HR">HR Administrator</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Hourly Rate (Lecturers Only)</label>
                        <input name="hourlyRate" id="hourlyRateInput" type="number" step="0.01" class="form-control" placeholder="e.g. 850.00" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">First Name</label>
                        <input name="firstName" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Last Name</label>
                        <input name="lastName" class="form-control" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Email (Username)</label>
                        <input name="email" type="email" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Password</label>
                        <input name="password" type="password" class="form-control" required />
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg">Create User</button>
                    <a asp-controller="HR" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple script to disable Hourly Rate if not a Lecturer
        document.getElementById('roleSelector').addEventListener('change', function() {
            var rateInput = document.getElementById('hourlyRateInput');
            if (this.value === 'Lecturer') {
                rateInput.disabled = false;
            } else {
                rateInput.disabled = true;
                rateInput.value = '0';
            }
        });
    </script>
}