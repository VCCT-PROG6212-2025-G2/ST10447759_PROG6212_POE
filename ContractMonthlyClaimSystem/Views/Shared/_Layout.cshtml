<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body>

    <div class="sidebar">
        <div>
            <div class="sidebar-header">
                <i class="fa-solid fa-university"></i> CMCS
            </div>
            <ul class="nav flex-column sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Lecturer" asp-action="MyClaims"><i class="fa-solid fa-file-invoice"></i> My Claims</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Lecturer" asp-action="Create"><i class="fa-solid fa-plus-circle"></i> Submit New Claim</a>
                </li>
            </ul>

            <hr />
            <h6 class="text-muted small">Admin Views</h6>

            <ul class="nav flex-column sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Coordinator" asp-action="Index"><i class="fa-solid fa-user-check"></i> Coordinator</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Manager" asp-action="Index"><i class="fa-solid fa-user-tie"></i> Manager</a>
                </li>
            </ul>

        </div>
        <div class="sidebar-footer">
        </div>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>