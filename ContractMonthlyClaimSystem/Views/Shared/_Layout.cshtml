<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body>

    <div class="sidebar">
        <div>
            <div class="sidebar-header">
                <i class="fa-solid fa-university"></i> CMCS
            </div>
            <ul class="nav flex-column sidebar-nav">
                @* Common Dashboard Link *@
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i> Dashboard
                    </a>
                </li>

                @* LECTURER LINKS *@
                @if (User.IsInRole("Lecturer"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Lecturer" asp-action="Create">
                            <i class="fa-solid fa-plus-circle"></i> Submit Claim
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Lecturer" asp-action="MyClaims">
                            <i class="fa-solid fa-file-invoice"></i> My Claims
                        </a>
                    </li>
                }

                @* HR LINKS *@
                @if (User.IsInRole("HR"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="HR" asp-action="AddUser">
                            <i class="fa-solid fa-user-plus"></i> Add User
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="HR" asp-action="ManageUsers">
                            <i class="fa-solid fa-users"></i> Manage Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="HR" asp-action="Reports">
                            <i class="fa-solid fa-file-pdf"></i> Reports
                        </a>
                    </li>
                }

                @* ADMIN LINKS *@
                @if (User.IsInRole("Coordinator"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Coordinator" asp-action="Index">
                            <i class="fa-solid fa-user-check"></i> Verify Claims
                        </a>
                    </li>
                }

                @if (User.IsInRole("Manager"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Manager" asp-action="Index">
                            <i class="fa-solid fa-user-tie"></i> Approve Claims
                        </a>
                    </li>
                }

                @* LOGIN / LOGOUT LOGIC *@
                <li class="nav-item mt-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="px-3 mb-2 text-muted small">
                            Logged in as: <br />
                            <strong>@User.Identity.Name</strong>
                        </div>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link nav-link text-danger">
                                <i class="fa-solid fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="nav-link text-success fw-bold" asp-controller="Account" asp-action="Login">
                            <i class="fa-solid fa-sign-in-alt"></i> Log In
                        </a>
                    }
                </li>
            </ul>
        </div>
        <div class="sidebar-footer">
        </div>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        @* NEW FOOTER *@
        <footer class="border-top footer text-muted mt-5 pt-3 text-center">
            <div class="container">
                &copy; @DateTime.Now.Year - <strong>CMCS v3.0 (Final)</strong> - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>